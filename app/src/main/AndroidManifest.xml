<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mystikcoder.statussaver">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/status_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="false"
        android:roundIcon="@mipmap/rect1121"
        android:supportsRtl="true"
        android:theme="@style/Theme.StatusSaverUI"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <service
            android:name=".framework.ui.services.NotificationDownloadService"
            android:enabled="false"
            android:exported="false"></service>

        <activity
            android:name=".framework.ui.activity.TikTokActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.GalleryActivity"
            android:exported="false" />

        <service
            android:name=".framework.ui.services.ClipTextObserverService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".framework.ui.activity.FacebookLoginActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.VideoPlayActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.MojActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.MxTakaTakActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.MitronActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.ChingariActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.JoshActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.TwitterActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.ShareChatActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.RoposoActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.LikeeActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.WhatsAppActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.FacebookActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.FullImageViewActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.InstagramActivity"
            android:exported="false" />
        <activity
            android:name=".framework.ui.activity.HomeActivity"
            android:exported="true"
            android:theme="@style/SplashImage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <!-- If you are using androidx.startup to initialize other components -->
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>